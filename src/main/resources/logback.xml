<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Имя файла для логов -->
    <property name="LOG_FILE" value="app.log" />

    <!-- Паттерн вывода логов -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n" />

    <!-- Запись в КОНСОЛЬ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Запись в ФАЙЛ (ротация по размеру) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/app-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>  <!-- Макс. размер файла -->
            <maxHistory>30</maxHistory>      <!-- Хранить логи 30 дней -->
        </rollingPolicy>
    </appender>

    <!-- Уровень логирования (INFO, DEBUG, ERROR и т.д.) -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

</configuration>